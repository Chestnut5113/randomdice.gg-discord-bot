{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
        "noEmit": false,
        "moduleResolution": "node",
        "lib": ["esnext.array"],
        "declaration": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "typeRoots": ["../node_modules/@types"]
    },
    "include": ["src"],
    "compileOnSave": true
}
